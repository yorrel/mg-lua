;; Environment Variablen definieren:
;;   MG_LUA_DIR
;;   MG_LUA_CUSTOM_DIR
;;
;; worlds_mg.lua nach MG_LUA_CUSTOM_DIR kopieren und anpassen
;;
;; ausserdem in ~/.tfrc aufnehmen

/eval /load %{MG_LUA_DIR}/client/tf/init.tf
/eval /loadlua %{MG_LUA_DIR}/main.lua
/eval /loadlua %{MG_LUA_CUSTOM_DIR}/main.lua
/eval /loadlua %{MG_LUA_CUSTOM_DIR}/worlds_mg.lua
